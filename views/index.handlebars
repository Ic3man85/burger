<header>
    <h1>Eat Da Burger, Eat it Now!</h1>
</header>


<div class="main-container">

    <div class="available-burgers" id='avail'>
        <h2>Burgers Available to Eat</h2>
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li class="eat-me">
                {{this.id}}. {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">

                    <input type="hidden" name="devoured" value="false">
                    <button class="btn btn-warning" type="submit">Eat Me!</button>
                </form>

            </li>

            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="add-burgers" id='add'>
        <h2>Add a Burger</h2>

       <div class="add-me">
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <label for="dab">Burger Name:</label>
                    <input type="text" id="dab" name="burger_name">
                </div>
                <button class="btn btn-primary" type="submit">Add Burger</button>
            </form>
       </div>
    </div>
    <div class="devoured-burgers" id='devoured'>
        <h2>Devoured Burgers</h2>

        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}}. {{this.burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>


</div>